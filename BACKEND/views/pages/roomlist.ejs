<div class="col-md-12 col-sm-12  ">
    <div class="x_panel">
      <div class="x_title">
        <h2>List Room</h2>
        <ul class="nav navbar-right panel_toolbox">
          <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
          </li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                <a class="dropdown-item" href="#">Settings 1</a>
                <a class="dropdown-item" href="#">Settings 2</a>
              </div>
          </li>
          <li><a class="close-link"><i class="fa fa-close"></i></a>
          </li>
        </ul>
        <div class="clearfix"></div>
      </div>
      <div class="x_content">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Tên</th>
              <th>Thú cưng</th>
              <th>Bữa sáng</th>
              <th>Yêu thích</th>
              <th>Hình ảnh</th>
              <th>Active</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% Room.forEach(function(room){ %>
                <tr>
                    <td><%- room.name %></td>
                    <td><% if(room.pets==1){ %>Allowed<%}else{%>Not Allowed<%} %></td>
                    <td><% if(room.breakfast==1){ %>available<%}else{%>UnAvailable<%} %></td>
                    <td><% if(room.featured==1){ %>Yes<%}else{%>No<%} %></td>
                    <td><img style="width:60px;height:50px;" src="./upload/<%- room.image %>"></td>
                    <td><% if(room.active==1){ %>Show<%}else{%>Hide<%} %></td>
                    <td>
                      <button type="button" class="btn btn-round btn-success"><a style="color:white;" href="/page/roomedit/<%- room._id %>">Edit</a></button>
                      <button type="button" class="btn btn-round btn-danger"><a onclick="return confirm('Bạn có chắc muốn xóa <%- room.name %> không?')" style="color:white;" href="/page/room/<%- room._id %>">Delete</a></button>
                    </td>
                </tr>
            <% }); %>
          </tbody>
    </table>

  </div>
</div>
</div>
